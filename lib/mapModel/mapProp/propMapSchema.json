{
  "description": "model prop dom-map schema",
  "type": "object",
  "properties": {
    "propType": {
      "type": "string",
      "pattern": "[value|array|model]"
    },
    "selector": {
      "type": "object",
      "properties": {
        "dataType": {
          "type": "string",
          "pattern": "[string|number|boolean|object]"
        },
        "path": {
          "type": "string"
        },
        "dataAttr": {
          "type": "string"
        },
        "props": {
          "type": "object"
        },
        "if": {
          "properties": {
            "dataType": {
              "const": "object"
            }
          }
        },
        "then": {
          "required": ["props"]
        },
        "else": {
          "required": ["path"]
        } 
      }
    }
  },
  "required": ["propType", "selector"]
}
