{
  "description": "model prop dom-map schema",
  "type": "object",
  "properties": {
    "propType": {
      "type": "string",
      "pattern": "[value|array|model]"
    },
    "dataType": {
      "type": "string",
      "pattern": "[string|number|boolean]"
    },
    "path": {
      "type": "string"
    },
    "dataAttr": {
      "type": "string"
    },
    "props": {
      "type": "object"
    }
  },
  "if": {
    "properties": {
      "propType": {
        "const": "model"
      }
    }
  },
  "then": {
    "required": ["propType", "path", "props"]
  },
  "else": {
    "required": ["propType", "dataType", "path"]
  }
}
